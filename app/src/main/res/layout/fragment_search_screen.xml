<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainscreen.search.SearchFragment"
    android:background="@color/searchFragmentBackground">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSearchScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayoutSearchScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="@color/searchTabIndicator"
            app:tabTextColor="@color/toolbarTextColor">

        </android.support.design.widget.TabLayout>
    </android.support.v4.view.ViewPager>
</LinearLayout>