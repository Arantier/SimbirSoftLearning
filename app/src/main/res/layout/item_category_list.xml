<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/help_card_height"
    android:layout_marginStart="@dimen/help_card_margin"
    android:layout_marginTop="@dimen/help_card_margin"
    android:layout_marginEnd="@dimen/help_card_margin"
    android:background="@color/helpCardBackground"
    app:layout_constraintTop_toBottomOf="@+id/textHelpScreenDescription">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/help_card_margin_horizontal"
        android:layout_marginTop="@dimen/help_card_picture_margin_vertical"
        android:layout_marginEnd="@dimen/help_card_margin_horizontal"
        android:layout_marginBottom="8dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/image_user_placeholder" />

    <TextView
        android:id="@+id/text"
        style="@style/HelpCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/help_card_text_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="категориякатегориякатегория"/>

</android.support.constraint.ConstraintLayout>
