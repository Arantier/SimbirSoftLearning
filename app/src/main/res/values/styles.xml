<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">?fontFamily/sans-serif</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/btn_selected</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/toolbarTextColor</item>
        <item name="android:actionMenuTextColor">@color/toolbarTextColor</item>
    </style>

    <style name="ToolbarTheme.Title" parent="ToolbarTheme">
        <item name="android:fontFamily">@font/oficcina_sans_extra_bold_scc</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="HelpSwitchMessage">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color">@color/helpCategoryMessage</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelpCardStyle">
        <item name="android:textColor">@color/helpCardText</item>
        <item name="android:fontFamily">@font/oficcina_sans_extra_bold_scc</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ProfileHintStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/profile_hint_size</item>
        <item name="android:layout_marginTop">@dimen/profile_hint_top_margin</item>
        <item name="android:layout_marginStart">@dimen/profile_text_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/profile_text_horizontal_margin</item>
    </style>

    <style name="ProfileTextStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/profile_text_size</item>
        <item name="android:layout_marginTop">@dimen/profile_text_top_margin</item>
        <item name="android:layout_marginStart">@dimen/profile_text_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/profile_text_horizontal_margin</item>
    </style>

    <style name="ProfileLogOutButtonStyle" parent="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/profile_log_out_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/profile_log_out_bottom_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/profile_log_out_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/profile_log_out_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/profile_log_out_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/profile_log_out_vertical_padding</item>
        <item name="android:elevation">@dimen/profile_log_out_elevation</item>
    </style>

    <style name="EditPhotoItemStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/edit_photo_item_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/edit_photo_item_drawable_padding</item>
        <item name="android:drawablePadding">@dimen/edit_photo_item_drawable_padding</item>
    </style>

    <style name="OrganisationListItemStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/organisation_list_item_text_size</item>
        <item name="android:paddingRight">@dimen/organisation_list_item_padding_right</item>
        <item name="android:paddingTop">@dimen/organisation_list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/organisation_list_item_padding_vertical</item>
        <item name="android:drawableRight">@drawable/ic_list_chevron</item>
        <item name="android:drawablePadding">@dimen/organisation_list_item_drawable_padding</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EventTitle">
        <item name="fontFamily">@font/oficcina_sans_extra_bold_scc</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">@dimen/event_list_item_title_line_spacing</item>
        <item name="android:textColor">@color/eventListItemTitleTextColor</item>
        <item name="android:textSize">@dimen/event_list_item_title_text_size</item>
    </style>

    <style name="EventTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/eventTextColor</item>
        <item name="android:layout_marginTop">@dimen/event_screen_info_field_top_margin</item>
        <item name="android:layout_marginRight">@dimen/event_screen_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/event_screen_info_field_left_margin</item>
    </style>

    <style name="EventScreenActionbarLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="LoginScreenFieldTitleLabel">
        <item name="android:textSize">@dimen/login_screen_field_label_text_size</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="PasswordToggleButton" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/btn_password_visibility_switch_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="PasswordVisibilitySwitch" parent="AppTheme">
        <item name="android:buttonStyleToggle">@style/PasswordToggleButton</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>
</resources>
