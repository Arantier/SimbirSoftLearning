<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageUserScreenPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:src="@drawable/image_user_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUserScreenName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_text_horizontal_margin"
                    android:layout_marginTop="@dimen/profile_name_top_margin"
                    android:layout_marginEnd="@dimen/profile_text_horizontal_margin"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/profile_name_size"
                    tools:text="Кагыр Маур Дыффин Аэп Кеаллах" />

                <TextView
                    style="@style/ProfileHintStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_birth_date" />

                <TextView
                    android:id="@+id/textUserScreenBirth"
                    style="@style/ProfileTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="01 февраля 1980" />

                <TextView
                    style="@style/ProfileHintStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_business" />

                <TextView
                    android:id="@+id/textUserScreenBusiness"
                    style="@style/ProfileTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Хирургия, травматология" />

                <Switch
                    style="@style/ProfileTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_hint_top_margin"
                    android:layout_marginBottom="@dimen/profile_text_bottom_margin"
                    android:text="@string/profile_receive_notifications" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_divider_height"
                android:background="@color/dividerLineColor" />

            <TextView
                style="@style/ProfileHintStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_friend_list_hint_top_margin"
                android:layout_marginBottom="@dimen/profile_friend_list_hint_bottom_margin"
                android:text="@string/profile_friends" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewUserScreenFriends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/profile_friend_list_bottom_margin"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_divider_height"
                android:background="@color/dividerLineColor" />

            <Button
                android:id="@+id/buttonLogout"
                style="@style/ProfileLogOutButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_log_out" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>