<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bottom_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:outlineProvider="none"
    tools:layout_gravity="bottom">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_bar_height"
        android:layout_gravity="bottom"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        app:srcCompat="@drawable/bkg_bottom_nav_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="2dp"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_news"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_bar_height"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_news" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_news"
                android:textAlignment="center"
                android:textSize="11sp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_bar_height"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:tint="@drawable/sel_nav_button_color_state">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_searh" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="@string/button_search"
                android:textAlignment="center"
                android:textSize="11sp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:tint="@drawable/sel_nav_button_color_state">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/image_button_help_circle" />

                <ImageView
                    android:id="@+id/image_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_heart" />

                <ImageView
                    android:id="@+id/image_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_help_shadow_height"
                    app:srcCompat="@drawable/ic_shadow" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_help"
                android:textAlignment="center"
                android:textSize="11sp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_bar_height"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_history_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_history"
                android:textAlignment="center"
                android:textSize="11sp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_bar_height"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_history" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="@string/button_profile"
                android:textAlignment="center"
                android:textSize="11sp"
                android:tint="@drawable/sel_nav_button_color_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>