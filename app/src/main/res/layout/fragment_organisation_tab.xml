<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrganisationTabFragment">

    <TextView
        android:id="@+id/text_search_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/search_info_padding" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_organisations_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/searchListBackground"
        android:paddingLeft="@dimen/organisation_list_padding_left"
        tools:listitem="@layout/item_organisation_list">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>