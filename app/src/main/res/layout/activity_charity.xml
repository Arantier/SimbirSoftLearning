<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.shcherbakovdv.ss.trainee.CharityPageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:theme="@style/ToolbarTheme.Title"
            tools:text="Спонсоры отремонтируют школу-интернат" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTitle"
                style="@style/EventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_title_top_margin"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Спонсоры отремонтируют школу-интернат" />

            <TextView
                android:id="@+id/textOrganisationPhones"
                style="@style/EventTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagePhoneIcon"
                app:layout_constraintTop_toTopOf="@+id/imagePhoneIcon"
                tools:text="+7 (937) 037 37-73
        +7 (937) 016 16-16" />

            <TextView
                android:id="@+id/textEventItemDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_title_top_margin"
                android:layout_marginRight="@dimen/event_screen_horizontal_margin"
                android:drawableLeft="@drawable/ic_calendar_white"
                android:drawableTint="@color/dateTextColor"
                android:text="@string/event_date_expiration_info"
                android:textColor="@color/dateTextColor"
                android:textSize="@dimen/event_list_item_snack_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitle" />

            <TextView
                android:id="@+id/textOrganisationAddress"
                style="@style/EventTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageAddressIcon"
                app:layout_constraintTop_toTopOf="@+id/imageAddressIcon"
                tools:text="Санкт-Петербург, Кирочная улица, д. 50А, каб. 208" />

            <ImageView
                android:id="@+id/imagePhoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_common_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textOrganisationAddress"
                app:srcCompat="@drawable/ic_phone" />

            <TextView
                android:id="@+id/textOrganisationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_organisation_name_top_margin"
                android:layout_marginRight="@dimen/event_screen_horizontal_margin"
                android:textColor="@color/organisationNameColor"
                android:textSize="@dimen/event_screen_organisation_name_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textEventItemDate"
                tools:text="Благотворительный Фонд «Счастливый Мир»" />

            <ImageView
                android:id="@+id/imageAddressIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_common_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textOrganisationName"
                app:srcCompat="@drawable/ic_address" />

            <ImageView
                android:id="@+id/imageMessageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_common_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textOrganisationPhones"
                app:srcCompat="@drawable/ic_mail" />

            <TextView
                android:id="@+id/textMessage"
                style="@style/EventTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageMessageIcon"
                app:layout_constraintTop_toTopOf="@+id/imageMessageIcon"
                tools:text="У вас есть вопросы? Напишите нам!" />

            <include
                android:id="@+id/layoutImages"
                layout="@layout/content_charity_screen_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_image_margin_top"
                android:layout_marginEnd="@dimen/event_screen_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMessage" />

            <TextView
                android:id="@+id/textDescription"
                style="@style/EventTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/event_screen_horizontal_margin"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_description_margin_top"
                android:layout_marginEnd="@dimen/event_screen_horizontal_margin"
                android:layout_marginRight="@dimen/event_screen_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutImages"
                tools:text="Участники и болельщики смогли весело и активно провести время на «Петербургском благотворительном марафоне» и при этом финансово поучаствовать в помощи детям." />

            <TextView
                android:id="@+id/textHyperlink"
                style="@style/EventTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_screen_horizontal_margin"
                android:layout_marginTop="@dimen/event_screen_hyperlink_margin_top"
                android:layout_marginRight="@dimen/event_screen_horizontal_margin"
                android:text="@string/charity_screen_organisation_site"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDescription" />

            <LinearLayout
                android:id="@+id/layoutDonatorsBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/event_screen_donators_bar_margin_top"
                android:background="@color/donatorsBarBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/event_screen_horizontal_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textHyperlink" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/error"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageView
            android:id="@+id/imageError"
            android:layout_width="@dimen/help_screen_error_image_size"
            android:layout_height="@dimen/help_screen_error_image_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?android:attr/alertDialogIcon" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/help_screen_error_text_margin_top"
            android:text="@string/charity_screen_error_message"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageError" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/content_charity_screen_action_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/event_screen_action_bar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
